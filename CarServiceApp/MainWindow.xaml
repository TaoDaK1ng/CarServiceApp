<Window x:Class="CarServiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarServiceApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Button Name="CarsButton" Content="Машины" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,21,10,0" FontSize="14" Padding="5" RenderTransformOrigin="0.516,-3.329"/>
        <Button Name="OwnersButton" Content="Владельцы" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,80,10,0" FontSize="14" Padding="5" RenderTransformOrigin="0.516,-3.329"/>
        <Button Name="MastersButton" Content="Мастера" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,138,10,0" FontSize="14" Padding="5" RenderTransformOrigin="0.516,-3.329"/>
        <Button Name="RepairCarsButton" Content="Машины в ремонте" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,196,10,0" FontSize="14" Padding="5" RenderTransformOrigin="0.516,-3.329"/>
    </Grid>
</Window>
